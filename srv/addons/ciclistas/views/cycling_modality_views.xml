<odoo>
    <record id="view_cycling_modality_tree" model="ir.ui.view">
        <field name="name">cycling.modality.tree</field>
        <field name="model">cycling.modality</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_cycling_modality_form" model="ir.ui.view">
        <field name="name">cycling.modality.form</field>
        <field name="model">cycling.modality</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_cycling_modality" name="Modalidades" parent="menu_cyclist_root" action="action_cycling_modality"/>

    <record id="action_cycling_modality" model="ir.actions.act_window">
        <field name="name">Modalidades</field>
        <field name="res_model">cycling.modality</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>