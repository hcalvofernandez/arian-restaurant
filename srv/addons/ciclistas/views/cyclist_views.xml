<odoo>
    <record id="view_cyclist_tree" model="ir.ui.view">
        <field name="name">cyclist.tree</field>
        <field name="model">cyclist</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="cycling_modality_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_cyclist_form" model="ir.ui.view">
        <field name="name">cyclist.form</field>
        <field name="model">cyclist</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="cycling_modality_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_cyclist_root" name="Ciclismo" sequence="10"/>
    <menuitem id="menu_cyclist" name="Ciclistas" parent="menu_cyclist_root" action="action_cyclist"/>

    <record id="action_cyclist" model="ir.actions.act_window">
        <field name="name">Ciclistas</field>
        <field name="res_model">cyclist</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>